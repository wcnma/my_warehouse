#create parent dir
mkdir "dir name"

#enter parent dir
cd "dir name"

#git initialization, change current dir to git warehouse 
git init

#add file to git warehouse
git add "file name"

#commit file to warehouse
git commit -m "commit massage"

#show history record
#current status fo git warehouse
git log

#show history record simpacy
#current status fo git warehouse simpacy
git log --pretty=oneline

#return pre-edition
git reset --hard [HEAD^|HEAD^^|HEAD~number]

#go to [commit id] edition(future)
git reset --hard [commit id]

#same as command in Linux
git reflog
